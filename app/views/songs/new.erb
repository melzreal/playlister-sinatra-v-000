<h1>Create a new song</h1>

<form action="/songs/<%= song.slug %>" method="POST">

    <label> Song Name:</label>
    <br>
    <input type="text" name="Name" id="Name">
    <br>

  <label> Artist Name:</label>
  <br>
  <input type="text" name="Artist Name" id="Artist Name">
   <br>

  <p>Create a new Genre, or Select one from below: </p>
  <label> Genre Names:</label>
  <br>

    <%Genre.all.each do |genre|%>
      <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%=genre.id%>"> <%= genre.name %></input>
    <%end%>

    <label> New Genre Name:</label>
    <input type="text" name="Genre Name">


  <input type="submit" value="Create">
</form>
